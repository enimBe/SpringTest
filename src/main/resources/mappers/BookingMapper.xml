<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.enimbe.test.lesson06.dao.BookingDAO">

	<select id="selectBooking" resultType="com.enimbe.test.lesson06.model.Booking">
		SELECT
			`id`
			, `name`
			, `headcount`
			, `day`
			, `date`
			, `phoneNumber`
			, `state`
			, `createdAt`
			, `updatedAt`
		FROM
			`booking`
	</select>
	
	<delete id="deleteBooking" parameterType="int">
		DELETE FROM `booking`
		WHERE
				`id` = #{id}
	</delete>
	
	<insert id="insertBooking" parameterType="map">
		INSERT INTO `booking`
		(
			`name`
			, `day`
			, `date`
			, `headcount`
			, `phoneNumber`
			, `createdAt`
			, `updatedAt`
		)
		VALLUES
		(
			#{name}
			, #{day}
			, #{date}
			, #{headcount}
			, #{phoneNumber}
			, now()
			, now()
		)
	</insert>
	
	<select id="searchBooking" parameterType="int" resultType="map">
		SELECT FROM
	</select>
	
</mapper>
















